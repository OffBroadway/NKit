<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp8.0</TargetFramework>
    <RootNamespace>Nanook.NKit.ConvertToNKit</RootNamespace>
    <Version>1.3.0.0</Version>
    <Authors>Nanook</Authors>
    <Company>Nanook</Company>
    <Product>NKit</Product>
    <Description>Nintendo Kit</Description>
    <Copyright>Copyright Â© Nanook 2019</Copyright>

    <SelfContained>true</SelfContained>
    <PublishSingleFile>true</PublishSingleFile>
    <PublishAot>true</PublishAot>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\NKit\NKit.csproj" />
    <TrimmerRootAssembly Include="System.Configuration.ConfigurationManager" Dynamic="Required All" />
    <TrimmerRootType Include="System.Configuration.ClientConfigurationHost" Dynamic="Required All" />
  </ItemGroup>

</Project>
